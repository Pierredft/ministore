{% extends 'base.html.twig' %}

{% block title %}MiniStore - Cart{% endblock %}
{% block body %}

<div style="padding-top:90px;"></div>
    <main class="container">
        <section class="row">
        <div class="col-12">
        <h1 class="text-center">Cart</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Pictures</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for element in data %}
                    <tr>
                        <td><img src="/images/produits/{{element.produit.image}}" alt="" class="img-fluid rounded-start" style="max-width:100px" ></td>
                        <td class="pt-5">{{element.produit.nom}}</td>
                        <td class="pt-5">{{element.produit.prix /100}}</td>
                        <td class="pt-5">{{element.quantite}}</td>
                        <td class="pt-5">{{element.quantite * element.produit.prix /100}}$</td>
                        <td class="pt-5">
                        <a href="{{path('cart_add', {'id':element.produit.id})}}" class="btn btn-success">+</a>
                        <a href="{{path('cart_remove', {'id':element.produit.id})}}" class="btn btn-warning">-</a>
                        <a href="{{path('cart_delete', {'id':element.produit.id})}}" class="btn btn-danger">Delete</a>
                        </td> 
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Your cart is empty</td>
                        </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total</td>
                    <td>{{ total /100 }}$</td>
                    <td>
                        <a href="{{path('cart_empty')}}" class="btn btn-danger">Drop cart</a>
                    </td>
                </tr>
            </tfoot>
        </table>
        <a href="{{path('app_orders_add')}}" class="btn btn-primary">Validate the cart</a>
        </div>
        </section>
    
    </main>
{% endblock %}
