{% extends "base.html.twig" %}

{% block title %}MiniStore - Address book change{% endblock title %}

{% block body %}
<div style="padding-top:90px;"></div>
    <div class="container">
        <h1 class="mt-4">Changing your address</h1>
        <div class="mt-4">
            {% for message in app.flashes('Danger') %}
                <div class="alert alert-warning mt-4">
                    {{ message }}
                </div>
            {% endfor %}
            {{form(form)}}
            <div class="mt-4">
        <a class="text-dark" href="{{path('app_user_show', {id: app.user.id})}}">Return to user profile</a>
        </div>
        </div>
    </div>
{% endblock %}