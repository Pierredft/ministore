{% extends 'base.html.twig' %}

{% block title %}MiniStore - Products{% endblock %}

{% block body %}
    <div style="padding-top:90px;"></div>
        <h1 class="text-center pb-4">All Products by MiniStore</h1>
        <form action="{{ path('app_produit') }}" method="get">
<div class="d-flex flex-row mb-3 ms-4 ">
        <select name="type" class="form-control mb-2 p-2 me-2" style="max-width: 150px">
        <option class="p-2" value="">All Types</option>
            {% for type in types %}
            <option class="p-2" value="{{ type.id }}">{{ type }}</option>
            {% endfor %}
        </select>
        <select name="order" class="form-control mb-2 p-2 me-2" style="max-width: 150px">
            <option class="p-2" value="">Sort by price</option>
            <option class="p-2" value="asc">Ascending</option>
            <option class="p-2" value="desc">Descending</option>
        </select>
    <button class="btn btn-outline-secondary me-3" type="submit">Filter</button>
    <a href="{{ path('app_produit') }}" class="btn btn-outline-secondary me-3">Reset</a>
    </div>
</form>
        
        {% for produit in produits%}
            <div class="d-flex flex-column">
                <div class="d-flex flex-row d-flex justify-content-evenly">
                    <img src="{{asset('/images/produits/'~ produit.image) }}" class="card-img-top img-fluide p-2" style="width:20%" alt="img">
                    <div class="d-flex flex-column">
                    <h2>{{produit.nom}}</h2>
                        </div>
                        <div class="d-flex flex-column align-items-center align-self-center">
                            <p class="text-dark">$ {{produit.prix /100}}</p>
                            <a href="{{ path('app_produit_show', {'id' : produit.id})}}" class="btn btn-primary">See product</a>
                        </div>
                </div>
            </div>
            <hr class="my-4">
        </div>
    </div>
{% endfor %}
{% endblock %}
