{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
    <div style="padding-top:90px;"></div>
        <h1>Nos Téléphone</h1>
        {% for produit in produits%}
            <div class="d-flex flex-column">
                <div class="d-flex flex-row d-flex justify-content-evenly">
                    <img src="{{asset('/images/produits/'~ produit.image) }}" class="card-img-top img-fluide p-2" style="width:20%" alt="img">
                    <h2> Smartphone {{produit.nom}}</h2>
                        <div class="d-flex flex-column align-items-center align-self-center">
                            <p class="text-dark">$ {{produit.prix /100}}</p>
                            <a href="{{ path('app_produit_show', {'id' : produit.id})}}" class="btn btn-primary">Voir le produit</a>
                        </div>
                </div>
            </div>
            <hr class="my-4">
        </div>
    </div>
{% endfor %}
{% endblock %}
